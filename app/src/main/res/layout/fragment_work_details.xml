<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.serializaion.fragment.WorkDetailsFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Work_DescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:textColor="@color/h3"
            android:textSize="26px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:layout_marginTop="24px"
            android:background="@color/h7"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12px"
                android:src="@mipmap/common_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:text="演职人员"
                android:textColor="@color/h2"
                android:textSize="32px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="258px"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Actor_Recy"
                android:layout_width="wrap_content"
                android:layout_height="258px"
                android:layout_marginLeft="24px"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/Actor_RecyTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="演职人员很神秘，没留下足迹"
                android:textColor="@color/h3"
                android:textSize="22px"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:layout_marginTop="24px"
            android:background="@color/h7"></View>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12px"
                android:src="@mipmap/common_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:text="热门评论"
                android:textColor="@color/h2"
                android:textSize="32px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/Work_commentTips"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="暂时没有评论，快来抢沙发"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Work_commentRecy"
            android:layout_width="match_parent"
            android:layout_height="850px"
            android:layout_marginTop="16px"
           ></android.support.v7.widget.RecyclerView>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/image_code_ed"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/Work_TextView"
                android:layout_width="574px"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:hint="发表评论~"
                android:padding="24px"
                android:textColorHint="@color/h4"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="98px"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24px"
                tools:ignore="RtlCompat">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/Work_atRelativelayout"
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_24">

                    <ImageView
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:src="@mipmap/common_at" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/Work_SendButton"
                    android:layout_width="@dimen/px_64"
                    android:layout_height="@dimen/px_64"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/CommentPopu_SendImage"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="7dp"
                        android:src="@mipmap/send"
                        android:textSize="26px" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
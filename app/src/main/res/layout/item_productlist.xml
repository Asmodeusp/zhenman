<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemProductList"
    android:layout_width="match_parent"
    android:layout_height="420px"
    android:layout_margin="@dimen/px_16"
    android:background="@drawable/product_selector">

    <ImageView
        android:id="@+id/itemProductList_bite"
        android:layout_width="@dimen/px_64"
        android:layout_height="@dimen/px_64"
        android:layout_marginLeft="@dimen/px_28"
        android:layout_marginTop="@dimen/px_38"
        android:src="@mipmap/my_qiezi_bite" />
    <TextView
        android:id="@+id/itemProductList_num"
        style="@style/Style32H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_48"
        android:layout_toRightOf="@id/itemProductList_bite"
        android:text="X2" />

    <ImageView
        android:id="@+id/itemProductList_moneyBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:layout_alignParentBottom="true"
        android:background="@color/h6" />

    <TextView
        android:id="@+id/itemProductList_money"
        style="@style/Style32H9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_24"
        android:text="ï¿¥1.00" />
</com.zhy.autolayout.AutoRelativeLayout>

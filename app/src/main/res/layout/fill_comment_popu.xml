<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="870px"
    android:id="@+id/CommentPopu_Rela"
    android:background="#F7ffffff">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/TopRela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/CommentPopu_CommentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:text="0条评论"
            android:textColor="@color/h3"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/CommentPopu_CommentCloseImg"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24px"
            android:layout_marginTop="24px"
            android:src="@mipmap/common_close" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/CommentPopu_Recy"
        android:layout_width="match_parent"
        android:layout_height="772px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TopRela"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/CommentPopu_RecyTip"
        android:layout_width="match_parent"
        android:layout_height="772px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TopRela"
        android:gravity="center"
        android:text="还没有评论，快来抢沙发"
        android:visibility="visible"></TextView>




    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@drawable/edit_text_corners"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       >

        <EditText

            android:id="@+id/CommentPopu_EdText"
            android:layout_width="628px"
            android:layout_height="98px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/h8"
            android:hint="发表评论~"
            android:padding="24px"
            android:textColorHint="@color/h4"
            android:textSize="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="140px"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/h8"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
           >

            <Button
                android:id="@+id/CommentPopu_Button"
                android:layout_width="98px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:background="@drawable/read_sendbtn"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/h9"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
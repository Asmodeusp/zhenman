<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F7ffffff"
    android:layout_height="978px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/TopRela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CommentPopu_CommentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:text="11条评论"
            android:textColor="@color/h3"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/CommentPopu_CommentCloseImg"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24px"
            android:layout_marginTop="24px"
            android:src="@mipmap/common_close" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhenman.asus.zhenman.view.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TopRela">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/CommentPopu_Recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhenman.asus.zhenman.view.ui.MyScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_above="@+id/common_EdText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/h6"></View>

    <EditText
        android:id="@+id/common_EdText"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/h8"
        android:hint="发表评论~"
        android:textColorHint="@color/h4"
        android:textSize="30px" />

</com.zhy.autolayout.AutoRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="978px"
    android:background="#F7ffffff">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/TopRela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CommentPopu_CommentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:text="11条评论"
            android:textColor="@color/h3"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/CommentPopu_CommentCloseImg"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24px"
            android:layout_marginTop="24px"
            android:src="@mipmap/common_close" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/CommentPopu_Recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TopRela"
        android:layout_alignParentLeft="true"></android.support.v7.widget.RecyclerView>


    <TextView
        android:visibility="gone"
        android:id="@+id/CommentPopu_RecyTip"
        android:gravity="center"
        android:text="还没有评论，快来抢沙发"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TopRela"
        android:layout_alignParentLeft="true"></TextView>


    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_above="@+id/common_EdText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/h6"></View>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/common_EdText"
        android:layout_width="600px"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/h8"
        android:hint="发表评论~"
        android:textColorHint="@color/h4"
        android:textSize="30px" />
<Button
    android:id="@+id/common_SendEdText"
    android:text="发送"
    android:layout_width="wrap_content"
    android:background="@color/h7"
    android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
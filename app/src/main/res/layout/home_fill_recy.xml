<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_fillView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/home_Recy_fill_Recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"></ListView>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/Home_footView"
        android:layout_width="match_parent"
        android:layout_height="680px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/home_footbackground"></com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="98px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginRight="16px">

            <ImageView
                android:id="@+id/home_HeadImg"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/login_weibo" />

            <ImageView
                android:id="@+id/home_follow"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:src="@mipmap/home_follow_on" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/home_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_likeImg"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:layout_marginBottom="8px"
                android:src="@mipmap/home_like_off" />

            <TextView
                android:id="@+id/home_likeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="56.6w"
                android:textColor="@color/h9"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/home_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/home_share"
            android:layout_gravity="center"
            android:layout_marginBottom="40px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:layout_marginBottom="8px"
                android:src="@mipmap/home_comment" />

            <TextView
                android:id="@+id/home_commentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1314"
                android:textColor="@color/h9"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/home_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/home_edit"
            android:layout_gravity="center"
            android:layout_marginBottom="40px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:layout_marginBottom="8px"
                android:src="@mipmap/home_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/h9"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/home_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_edit_Image"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_gravity="center"
                android:layout_marginBottom="8px"
                android:src="@mipmap/home_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="再创作"
                android:textColor="@color/h9"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="98px"
        android:layout_marginLeft="32px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_ChallengeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_text"
            android:drawableLeft="@mipmap/home_topic"
            android:drawablePadding="8px"
            android:padding="8px"
            android:text="抱歉，猜不透你的套路"
            android:textColor="@color/h9"
            android:textSize="26px" />

        <TextView
            android:id="@+id/home_UserNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8px"
            android:text="真漫123"
            android:textColor="@color/h9"
            android:textSize="32px" />

        <TextView
            android:id="@+id/home_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:maxEms="14"
            android:text="你们知道吗？这个世界上每三个人终究有一个傻B，你们知道吗？这个世界上每三个人终究有一个傻B，"
            android:textColor="@color/h9"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>


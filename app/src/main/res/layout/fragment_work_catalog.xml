<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.serializaion.fragment.WorkCatalogFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="54px"
            android:layout_marginTop="24px">

            <TextView
                android:id="@+id/PositiveSequenceBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:text="正序"
                android:textColor="@color/h3"
                android:textSize="26px" />

            <View

                android:layout_width="2px"
                android:layout_height="10px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:background="#000000" />

            <TextView
                android:id="@+id/ReverseOrderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="倒序"
                android:textColor="#b37feb"
                android:textSize="26px" />

            <TextView
                android:id="@+id/All_chaptersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:text="全部章节(38)"
                android:textColor="@color/h3"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/AutoRrepurchaseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8px"
                android:text="自动续购"
                android:textColor="@color/h3"
                android:textSize="26px" />

            <ImageView
                android:id="@+id/AutoRrepurchaseImg"
                android:layout_width="88px"
                android:layout_height="54px"
                android:layout_marginRight="24px"
                android:src="@mipmap/edit_outline_button_off" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:nestedScrollingEnabled="false"
        android:id="@+id/Detaails_CatalogRecy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"></android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoLinearLayout>
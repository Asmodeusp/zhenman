<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/UserLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px_54"
            android:layout_height="@dimen/px_54"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="20px"
            android:layout_marginRight="@dimen/px_20"
            android:src="@mipmap/my_qiezi" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肥源"
                android:textColor="@color/h3"
                android:textSize="@dimen/px_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刀工了得，看饿了。"
                android:textColor="@color/h2"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/comment_fill_likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/px_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/comment_fill_likeImg"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/my_like_on" />

        <TextView
            android:id="@+id/comment_fill_likeNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8px"
            android:text="32"
            android:textColor="@color/h5"
            android:textSize="@dimen/px_24" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/h8"
        android:id="@+id/comment_Two_ItemLinearLayout"
        android:layout_width="560px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserLinearLayout"
        android:layout_marginLeft="@dimen/px_106"
        android:layout_marginTop="8px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:text="小健建：我是二级评论"
            android:textSize="26px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_marginTop="@dimen/px_8"
            android:text="我是二级评论，你知道吗，我的字体有点大，可能需要放小"
            android:textSize="@dimen/px_26" />

        <TextView
            android:id="@+id/comment_fill_SeeMoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_Two_ItemLinearLayout"
            android:layout_marginTop="@dimen/px_8"
            android:text="共15条评论>"
            android:textColor="@color/c1"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_Two_ItemLinearLayout"
        android:layout_marginLeft="106px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="@dimen/px_24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11分钟前"
            android:textColor="@color/h5"
            android:textSize="@dimen/px_24" />

        <TextView
            android:id="@+id/comment_fill_fromUserText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:text="来自绝版青春发布的动态"
            android:textColor="@color/c5"
            android:textSize="@dimen/px_24" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.HomepageFragment">


    <android.support.v4.view.ViewPager
        android:id="@+id/HomePage_Pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></android.support.v4.view.ViewPager>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/Home_HeadView"
        android:layout_width="match_parent"
        android:layout_height="146px"
        android:background="@drawable/home_headbackground">

        <ImageView
            android:id="@+id/HomeHot_search_Img"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="48px"
            android:layout_marginRight="48px"
            android:layout_marginTop="48px"
            android:src="@mipmap/home_search" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="48px">

            <android.support.design.widget.TabLayout
                android:id="@+id/Home_Tablayout"
                android:layout_width="match_parent"
                android:layout_height="98px"
                app:tabIndicatorHeight="0dp"
                app:tabTextColor="#fff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:tabGravity="center"
                app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium"
                app:tabSelectedTextColor="#CFCFCF">
            </android.support.design.widget.TabLayout>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
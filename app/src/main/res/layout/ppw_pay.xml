<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_code"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_24"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/ppwPay_userName"
            style="@style/Style36H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_24"

            android:text="Hi Sunny" />

        <TextView
            android:id="@+id/ppwPay_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ppwPay_userName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_24"
            android:text="X 2" />

        <ImageView
            android:id="@+id/ppwPay_qiezi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ppwPay_userName"
            android:layout_marginRight="@dimen/px_16"
            android:layout_toLeftOf="@+id/ppwPay_num"
            android:src="@mipmap/my_qiezi_bite" />

        <TextView
            style="@style/Style26H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ppwPay_userName"
            android:layout_marginRight="@dimen/px_16"
            android:layout_toLeftOf="@+id/ppwPay_qiezi"
            android:text="您的茄子:" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ppwPay_productList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginTop="@dimen/px_8">

    </android.support.v7.widget.RecyclerView>

    <TextView
        style="@style/Style32H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginTop="@dimen/px_32"
        android:text="支付方式" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/px_16"
        android:background="@color/h7"></View>

    <RadioGroup
        android:id="@+id/ppwPay_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/ppwPay_zhifubaoBtn"
            style="@style/Style32H3"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:layout_marginLeft="@dimen/px_24"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@mipmap/my_zhifubao"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="     支付宝支付" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"></View>

        <RadioButton
            android:id="@+id/ppwPay_weixinBtn"
            style="@style/Style32H3"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:layout_marginLeft="@dimen/px_24"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@mipmap/my_weixin"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="     微信支付" />

    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ppwPay_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_98">


        <Button
            android:id="@+id/ppwPay_payBtn"
            style="@style/Style32H9"
            android:layout_width="200px"
            android:layout_height="@dimen/px_98"
            android:layout_alignParentRight="true"
            android:background="@color/c1"
            android:text="打赏"
            android:textColor="@color/h7" />

        <TextView
            android:id="@+id/ppwPay_payMoney"
            style="@style/Style32C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/px_32"
            android:layout_toLeftOf="@+id/ppwPay_payBtn"
            android:text="￥1.00" />

        <TextView
            android:id="@+id/ppwPay_other01"
            style="@style/Style32H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ppwPay_payMoney"
            android:text="个茄子," />

        <TextView
            android:id="@+id/ppwPay_qieziNum"
            style="@style/Style32C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ppwPay_other01"
            android:text="1" />


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/h9">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemMyAttenTheme_headImage"
        android:layout_width="@dimen/px_128"
        android:layout_height="@dimen/px_128"
        android:layout_margin="@dimen/px_24" />

    <TextView
        android:id="@+id/itemMyAttenTheme_title"
        style="@style/Style32H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginTop="@dimen/px_32"
        android:layout_toRightOf="@id/itemMyAttenTheme_headImage"
        android:text="每个人都不应该被亏待" />

    <TextView
        android:id="@+id/itemMyAttenTheme_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itemMyAttenTheme_title"
        android:layout_below="@id/itemMyAttenTheme_title"
        android:layout_marginTop="@dimen/px_24"
        android:layout_toRightOf="@id/itemMyAttenTheme_headImage"
        android:text="只有变得优秀才会被另眼相看" />

    <TextView
        android:id="@+id/itemMyAttenTheme_attention"
        style="@style/Style26C5"
        android:layout_width="@dimen/px_128"
        android:layout_height="@dimen/px_56"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_24"
        android:layout_centerVertical="true"
        android:background="@drawable/yiguanzhu"
        android:gravity="center"
        android:text="已关注" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginTop="176px"
        android:background="@color/h7" />

</com.zhy.autolayout.AutoRelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/h8"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Comment_At_Item_headImage"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_margin="@dimen/px_12" />

        <TextView
            android:id="@+id/Comment_At_Item_headImage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:layout_marginTop="@dimen/px_12"
            android:layout_toRightOf="@id/Comment_At_Item_headImage"
            android:text="每个人都不应该被亏待"
            android:textColor="@color/h2"
            android:textSize="24px" />

        <TextView
            android:id="@+id/Comment_At_Item_headImage_title_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Comment_At_Item_headImage_title"
            android:layout_alignLeft="@id/Comment_At_Item_headImage_title"
            android:layout_marginTop="@dimen/px_8"
            android:layout_toRightOf="@id/itemMyAttenTheme_headImage"
            android:text="只有变得优秀才会被另眼相看"
            android:textSize="@dimen/px_24" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/h9"></View>

</com.zhy.autolayout.AutoLinearLayout>
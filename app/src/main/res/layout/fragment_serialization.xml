<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SerializationFragment">

    <com.zhenman.asus.zhenman.view.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.recker.flybanner.FlyBanner
                    android:id="@+id/Serialization_FlyBanner"
                    android:layout_width="match_parent"
                    android:layout_height="440px"
                    android:background="@drawable/image_code"
                    ></com.recker.flybanner.FlyBanner>

                <ImageView
                    android:id="@+id/Serialization_common_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="48px"
                    android:src="@mipmap/common_search" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/Serialization_serial_classButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/serial_class"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/serial_class" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/serial_class"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16px"
                        android:text="分类"
                        android:textColor="@color/h2"
                        android:textSize="26px" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/Serialization_serial_rankButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/serial_rank"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/serial_rank" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/serial_rank"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16px"
                        android:text="排行榜"
                        android:textColor="@color/h2"
                        android:textSize="26px" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/Serialization_serial_starButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/serial_star"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/serial_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/serial_star"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16px"
                        android:text="达人榜"
                        android:textColor="@color/h2"
                        android:textSize="26px" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/Serialization_serial_collectionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/serial_collection"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/serial_collection" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/serial_collection"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16px"
                        android:text="书架"
                        android:textColor="@color/h2"
                        android:textSize="26px" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16px"
                android:layout_marginTop="24px"
                android:background="@color/h7"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16px"
                        android:src="@mipmap/common_tag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16px"
                        android:text="热门推荐"
                        android:textColor="@color/h2"
                        android:textSize="32px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Serialization_Hot_moreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="48px"
                        android:src="@mipmap/common_more" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Serialization_HotRecy"
                android:layout_width="match_parent"
                android:layout_height="840px"
                android:layout_marginTop="24px"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="16px"
                android:layout_marginTop="24px"
                android:background="@color/h7"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16px"
                        android:src="@mipmap/common_tag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16px"
                        android:text="最近更新"
                        android:textColor="@color/h2"
                        android:textSize="32px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/Serialization_Lately_moreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="48px"
                        android:src="@mipmap/common_more" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Serialization_LatelyRecy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhenman.asus.zhenman.view.ui.MyScrollView>


</com.zhy.autolayout.AutoFrameLayout>
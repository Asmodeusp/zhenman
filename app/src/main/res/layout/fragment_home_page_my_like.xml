<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.myself.fragment.HomePageMyLikeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/myLike_ComicTab"
        android:layout_width="match_parent"
        android:layout_height="79px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_8"
        android:background="@color/h9"
        app:tabIndicatorColor="@color/c1"
        app:tabIndicatorHeight="@dimen/px_0"
        app:tabSelectedTextColor="@color/c1"
        app:tabTextColor="@color/h3"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/myLike_ComicViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>

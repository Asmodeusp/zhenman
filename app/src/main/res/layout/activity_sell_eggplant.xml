<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.myself.SellEggplantActivity">


    <include
        android:id="@+id/above_head"
        layout="@layout/above_head" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/sellEggplant_item01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_128"
            android:layout_below="@+id/above_head">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sellEggplant_img01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_24"
                android:src="@mipmap/my_qiezi" />

            <TextView
                android:id="@+id/sellEggplant_num01"
                style="@style/Style32H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_24"
                android:layout_toLeftOf="@id/sellEggplant_img01" />

            <TextView
                android:id="@+id/sellEggplant_kind01"
                style="@style/Style32H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sellEggplant_num01"
                android:text="茄子：" />

            <CheckBox
                android:id="@+id/sellEggplant_isSelect01"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_24"
                android:button="@drawable/pay_selector" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/h6" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/sellEggplant_item02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_128">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sellEggplant_img02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_24"
                android:src="@mipmap/my_qiezi" />

            <TextView
                android:id="@+id/sellEggplant_num02"
                style="@style/Style32H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_24"
                android:layout_toLeftOf="@id/sellEggplant_img02" />

            <TextView
                android:id="@+id/sellEggplant_kind02"
                style="@style/Style32H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sellEggplant_num02"
                android:text="茄子：" />

            <CheckBox
                android:id="@+id/sellEggplant_isSelect02"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_24"
                android:button="@drawable/pay_selector" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/h6" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/sellEggplant_item03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_128">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sellEggplant_img03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_24"
                android:src="@mipmap/my_qiezi" />
            <TextView
                android:id="@+id/sellEggplant_num03"
                style="@style/Style32H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_24"
                android:layout_toLeftOf="@id/sellEggplant_img03" />
            <TextView
                android:id="@+id/sellEggplant_kind03"
                style="@style/Style32H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sellEggplant_num03"
                android:text="茄子：" />
            <CheckBox
                android:id="@+id/sellEggplant_isSelect03"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_24"
                android:button="@drawable/pay_selector" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/sellEggplant_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="暂时没有数据哦~" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/h6" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/h7" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h7"></View>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/sellEggplant_footView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/Style26H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sellEggplant_eggplantNum"
            android:text="共计" />

        <TextView
            android:id="@+id/sellEggplant_eggplantNum"
            style="@style/Style32C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sellEggplant_other03"
            android:text="48" />

        <TextView
            android:id="@+id/sellEggplant_other03"
            style="@style/Style26H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sellEggplant_other02"
            android:text="个茄子" />

        <TextView
            android:id="@+id/sellEggplant_other02"
            style="@style/Style26H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sellEggplant_money"
            android:text=", 价值" />

        <TextView
            android:id="@+id/sellEggplant_money"
            style="@style/Style32C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sellEggplant_other01"
            android:text="2.2" />

        <TextView
            android:id="@+id/sellEggplant_other01"
            style="@style/Style26H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_8"
            android:layout_toLeftOf="@id/sellEggplant_question"
            android:text="元" />

        <ImageView
            android:id="@+id/sellEggplant_question"
            android:layout_width="@dimen/px_32"
            android:layout_height="@dimen/px_32"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_32"
            android:layout_toLeftOf="@id/sellEggplant_sellBtn"
            android:src="@mipmap/my_question" />

        <Button
            android:id="@+id/sellEggplant_sellBtn"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/c1"
            android:text="卖出"
            android:textColor="@color/h9"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
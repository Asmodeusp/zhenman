<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MyselfFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px">

        <ImageView
            android:id="@+id/my_setting"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48px"
            android:layout_marginTop="10px"
            android:src="@mipmap/my_setup" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_data"
        android:layout_width="match_parent"
        android:layout_height="270px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_Avatar"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16px"
            android:src="@mipmap/my_qiezi" />


        <TextView
            android:id="@+id/my_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_Avatar"
            android:layout_marginLeft="24px"
            android:layout_marginTop="2px"
            android:layout_toEndOf="@+id/my_Avatar"
            android:layout_toRightOf="@+id/my_Avatar"
            android:text="桃太萌"
            android:textColor="@color/h2"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/my_Sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_Name"
            android:layout_marginLeft="8px"
            android:layout_toRightOf="@id/my_Name"
            android:src="@mipmap/my_f" />

        <!--<TextView
            android:id="@+id/my_WorksNumber"
            android:layout_width="wrap_content"

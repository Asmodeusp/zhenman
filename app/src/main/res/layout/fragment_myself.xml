        android:id="@+id/my_DraftPage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_DraftPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/my_draft" />

        <TextView
            android:id="@+id/my_DraftTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_DraftPicture"
            android:text="我的草稿"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@mipmap/common_more" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h7">

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_AccountNumberPage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_AccountNumberPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/my_account" />

        <TextView
            android:id="@+id/my_AccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_AccountNumberPicture"
            android:text="账号管理"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other08"
            android:layout_width="wrap_content"

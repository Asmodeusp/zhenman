<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MyselfFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px">

        <ImageView
            android:id="@+id/my_setting"
            android:src="@mipmap/my_setup"
            android:layout_width="80px"
            android:layout_marginTop="10px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_data"
        android:layout_width="match_parent"
        android:layout_height="240px">

        <ImageView
            android:id="@+id/my_Avatar"
            android:src="@mipmap/my_qiezi"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16px" />

        <TextView
            android:id="@+id/my_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_Avatar"
            android:layout_marginLeft="24px"
            android:layout_marginTop="2px"
            android:layout_toEndOf="@+id/my_Avatar"
            android:layout_toRightOf="@+id/my_Avatar"
            android:text="桃太萌"
            android:textColor="@color/h2"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/my_Sex"
            android:src="@mipmap/my_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_Name"
            android:layout_alignLeft="@+id/my_FansNumber"
            android:layout_alignStart="@+id/my_FansNumber" />

        <TextView
            android:id="@+id/my_WorksNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_Name"
            android:layout_marginLeft="24px"
            android:layout_marginTop="8px"
            android:layout_toRightOf="@+id/my_Avatar"
            android:text="16"
            android:textColor="@color/h2"
            android:textSize="36px" />

        <TextView
            android:id="@+id/my_Other01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_WorksNumber"
            android:layout_alignEnd="@+id/my_Name"
            android:layout_alignRight="@+id/my_Name"
            android:layout_marginLeft="8px"
            android:text="作品"
            android:textColor="@color/h4"
            android:textSize="26px" />

        <TextView
            android:id="@+id/my_FansNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/my_Other01"
            android:layout_alignBottom="@+id/my_Other01"
            android:layout_centerHorizontal="true"
            android:text="6.6万"
            android:textColor="@color/h2"
            android:textSize="36px" />

        <TextView
            android:id="@+id/my_Other02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_Other01"
            android:layout_marginLeft="8px"
            android:layout_toEndOf="@+id/my_FansNumber"
            android:layout_toRightOf="@+id/my_FansNumber"
            android:text="粉丝"
            android:textColor="@color/h4"
            android:textSize="26px" />

        <TextView
            android:id="@+id/my_CareNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_Other02"
            android:layout_marginLeft="32px"
            android:layout_toEndOf="@+id/my_Other02"
            android:layout_toRightOf="@+id/my_Other02"
            android:text="30"
            android:textColor="@color/h2"
            android:textSize="36px" />

        <TextView
            android:id="@+id/my_Other03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_FansNumber"
            android:layout_marginLeft="8px"
            android:layout_toEndOf="@+id/my_CareNumber"
            android:layout_toRightOf="@+id/my_CareNumber"
            android:text="关注"
            android:textColor="@color/h4"
            android:textSize="26px" />

        <TextView
            android:id="@+id/my_Resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_WorksNumber"
            android:layout_alignStart="@+id/my_WorksNumber"
            android:layout_below="@+id/my_WorksNumber"
            android:layout_marginBottom="32px"
            android:layout_marginRight="24px"
            android:layout_marginTop="16px"
            android:text="本宝宝的个人简历最多两行，所以我要写两行啊么么哒~"
            android:textColor="@color/h4"
            android:textSize="26px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h6">

    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:background="@color/h7">

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_PersonalHomePage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_Home"
            android:src="@mipmap/my_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px" />

        <TextView
            android:id="@+id/my_PersonalHomePageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_Home"
            android:text="个人主页"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other04"
            android:src="@mipmap/common_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h7">

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_WalletPage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_WalletPicture"
            android:src="@mipmap/my_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px" />

        <TextView
            android:id="@+id/my_WalletTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_WalletPicture"
            android:text="我的钱包"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other05"
            android:src="@mipmap/common_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h7">

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_ShelfPage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_BookPicture"
            android:src="@mipmap/my_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px" />

        <TextView
            android:id="@+id/my_ShelfTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_BookPicture"
            android:text="书架"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other06"
            android:src="@mipmap/common_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h7">

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_DraftPage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_DraftPicture"
            android:src="@mipmap/my_draft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px" />

        <TextView
            android:id="@+id/my_DraftTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_DraftPicture"
            android:text="我的草稿"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other07"
            android:src="@mipmap/common_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/h7">

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_AccountNumberPage"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/my_AccountNumberPicture"
            android:src="@mipmap/my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px" />

        <TextView
            android:id="@+id/my_AccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@id/my_AccountNumberPicture"
            android:text="账号管理"
            android:textColor="@color/h3"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/my_Other08"
            android:src="@mipmap/common_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.serializaion.BookshelfActivity">

    <include layout="@layout/above_head" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bookshelf_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_12"
        android:background="@color/h9"
        app:tabIndicatorColor="@color/c1"
        app:tabIndicatorHeight="@dimen/px_4"

        app:tabSelectedTextColor="@color/c1"
        app:tabTextColor="@color/h3">

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/bookshelf_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_prograss_bg"
    android:orientation="vertical"
    tools:context=".view.message.ByFansActivity">

    <include layout="@layout/above_head" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/byFans_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:background="@color/h7"
        android:layout_height="@dimen/px_1"/>

    <TextView
        android:id="@+id/byFans_none"
        style="@style/Style32H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="本宝宝暂时没有粉丝哦"
        android:visibility="gone" />

</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/h8">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/sView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sView"
        android:layout_marginTop="24px">

        <ImageView
            android:id="@+id/fill_Serializaion_commentDetails_HeadView"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginLeft="38px"
            android:layout_marginTop="20px"
            android:background="@mipmap/my_qiezi" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fill_Serializaion_commentDetails_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路飞"
                android:textColor="@color/h3"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="580px"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/fill_Serializaion_commentDetails_CommentReply"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8px"
                        android:textColor="@color/h3"
                        android:textSize="26px"
                        android:layout_height="wrap_content"
                        android:text="回复：" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/fill_Serializaion_commentDetails_CommentReplyName"
                        android:layout_marginTop="8px"
                        android:textSize="26px"
                        android:textColor="@color/c1"
                        android:text="hahah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/fill_Serializaion_commentDetails_Comment"
                    android:layout_width="580px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:maxEms="14"
                    android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                    android:textColor="@color/h3"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>


            <TextView
                android:id="@+id/fill_Serializaion_commentDetails_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:layout_marginTop="8px"
                android:text="11nain"
                android:textColor="@color/h5"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sView"
        android:background="@color/h9"></View>

</com.zhy.autolayout.AutoLinearLayout>
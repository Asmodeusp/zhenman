<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="870px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/HomeHot_CommentPopu_Recy"
            android:layout_width="match_parent"
            android:layout_height="772px"></android.support.v7.widget.RecyclerView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HomeHot_CommentPopu_Recy">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:background="@drawable/edit_text_corners">

                <EditText
                    android:id="@+id/HomeHot_CommentPopu_EdText"
                    android:layout_width="628px"
                    android:layout_height="98px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/h8"
                    android:clickable="false"
                    android:hint="发表评论~"
                    android:padding="24px"
                    android:textColorHint="@color/h4"
                    android:textSize="30px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="98px"
                    android:layout_height="98px"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="24px"
                    tools:ignore="RtlCompat">

                    <Button
                        android:id="@+id/HomeHot_CommentPopu_SendButton"
                        android:layout_width="98px"
                        android:layout_height="64px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/read_sendbtn"
                        android:layout_gravity="center"
                        android:text="发送"
                        android:textColor="@color/h9"
                        android:textSize="26px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </ScrollView>


    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>